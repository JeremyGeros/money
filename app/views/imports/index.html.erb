<div>
  <h1 class='text-2xl'>Import your data</h1>

  <p>
    Decription of what this is and how it works
  </p>


  <%= form_with model: @import, local: true, multipart: true, html: { autocomplete: "off" } do |form| %>
    <div class='flex flex-col mt-6 mb-6'>
      <%= form.label :file, 'PDF' %>
      <%= form.file_field :file %>
    <div>

    <div class='mt-4'>
      <%= form.label :account_id, 'Account' %>
      <%= form.select :account_id, options_from_collection_for_select(Account.all, :id, :name) %>
    </div>

    <%= form.submit 'Import', class: 'btn btn-primary mt-6' %>
  <% end %>

  <div class=''>
    <h2>Previous imports</h2>
    <ul>
      <% @previous_imports.each do |import| %>
        <li>
          <%= link_to "#{import.account.name} imported file #{import.name}", import_path(import) %>
        </li>
      <% end %>
  </div>
</div>