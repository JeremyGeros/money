<%= turbo_frame_tag "transactions_list" do %>
  <table class='w-full  mt-1' >
    <thead class='font-bold'>
      <tr>
        <th class='text-left'>Transaction</th>
        <% if show_account %>
          <th class='text-left'>Account</th>
        <% end %>
        <th class='text-right'>Amount</th>
        <th class='text-right'>Made at</th>
      </tr>
    </thead>

    <tbody>
      <% transactions.each do |transaction| %>
        <tr class='border-b border-zinc-200'>
          <td class='break-all py-2 max-w-xl'><span class='mr-2'><%= display_spend_category(transaction.spend) %></span><%= link_to transaction.pretty_name, transaction_path(transaction) %></td>
          <% if show_account %>
            <td class='flex items-center py-2'><%= image_tag transaction.account.logo, class: 'w-4 mr-1' if transaction.account.logo.attached? %><%= link_to transaction.account.name, account_path(transaction.account) %></td>
          <% end %>
          <td class='text-right'><%= display_amount_colored(transaction.amount) %></td>
          <td class='text-right'><%= pretty_date_display(transaction.made_at) %></td>
        </tr>
      <% end %>
  </table>

  <% if defined?(@pagy) %>
    <div class='flex items-center mt-6'>
      <%== pagy_nav(@pagy) %>
      <div class='flex-1'></div>
      <div class=''><%== pagy_info(@pagy) %></div>
    <div>
  <% end %>

  <div class='pagy-nav pagination'></div>
<% end %>